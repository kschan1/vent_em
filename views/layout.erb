    <title>Vent 'em</title>
  </head>
  <body>
    <header>
      <h1><a href="/">Vent 'em</a></h1>

      <% if logged_in? %>
        <p><%= current_user.username %></p>
        <form action="/login" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <button>logout</button>
        </form>
      <% else %>
        <a href="/login">login</a>
      <% end %>

    </header>

    <%= yield  %>
  </body>
</html>
