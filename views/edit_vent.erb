
<div class="container">

  <div class="col-md-3">

  </div>

  <div class="col-md-6">
    <form action="/<%= @vent.id %>" method="post">
      <input type="hidden" name="_method" value="PUT">
      <textarea class="form-control" name="vent_body" rows="4"><%= @vent.body %></textarea>
      <select name="vent_type_id" id="">
        <% @vent_types.each do |vent_type| %>
          <% if vent_type.id == @vent.vent_type.id %>
            <option selected value="<%= vent_type.id %>"><%= vent_type.name %></option>
          <% else %>
            <option value="<%= vent_type.id %>"><%= vent_type.name %></option>
          <% end %>
        <% end %>
      </select>
      <button class="btn btn-default">vent</button>
    </form>
  </div>

  <div class="col-md-3">

  </div>

</div>
